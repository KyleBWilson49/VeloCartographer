<h1>Sign In</h1>

<form class="sign-in-user-form" action="<%= session_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="user_username">Username</label>
  <input type="text"
         name="user[username]"
         value="<%= @user.username %>"
         id="user_username">

  <label for="user_password">Password</label>
  <input type="password"
         name="user[password]"
         id="user_password">

  <input type="submit" value="Create New User">
</form>

<%= link_to "Sign Up!", new_api_user_url %>
